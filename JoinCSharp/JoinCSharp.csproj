<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>JoinCSharp</RootNamespace>
    <AssemblyName>joincs</AssemblyName>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Version>2.0.0-beta003</Version>
    <IsPackable>true</IsPackable>
    <PackAsTool>true</PackAsTool>
    <PackageId>Join.CSharp</PackageId>
    <PackageLicenseUrl>https://raw.githubusercontent.com/jhgbrt/joincs/master/LICENSE.txt</PackageLicenseUrl>
    <PackageProjectUrl>http://github.com/jhgbrt/joincs</PackageProjectUrl>
    <RepositoryUrl>http://github.com/jhgbrt/joincs</RepositoryUrl>
    <Authors>Jeroen Haegebaert</Authors>
    <Title>A for joining a set of .cs files.</Title>
    <Description>This dotnet core (cli) tool can be used to join a set of .cs files into one big source file. Uses roslyn to parse each input file and ensure correct output.</Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="2.9.0" />
  </ItemGroup>
</Project>
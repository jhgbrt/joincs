<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>JoinCSharp</RootNamespace>
    <AssemblyName>joincs</AssemblyName>
    <TargetFramework>net8.0</TargetFramework>
    <Version>4.0.0-preview.2</Version>
    <IsPackable>true</IsPackable>
    <PackAsTool>true</PackAsTool>
    <PackageId>Join.CSharp</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/jhgbrt/joincs</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jhgbrt/joincs</RepositoryUrl>
    <Authors>Jeroen Haegebaert</Authors>
    <Title>A tool for joining a set of .cs files into one file.</Title>
    <Description>This dotnet core (cli) tool can be used to join a set of .cs files into one big source file. Uses roslyn to parse each input file and ensure correct output.</Description>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.8.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.8.0" />
    <PackageReference Include="System.CommandLine.DragonFruit" Version="0.4.0-alpha.22272.1" />
  </ItemGroup>
</Project>